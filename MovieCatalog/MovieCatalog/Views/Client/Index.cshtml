@{
    ViewBag.Title = "Client";
}
<script src="~/Scripts/myApp.js"></script>
<h2>Clients</h2>
<div data-ng-app="myApp" data-ng-controller="clientCtrl" class="panel panel-default">
    <div class="panel-body">
        <table class="table table-striped">
            <tr>
                <th></th>
                <th>Name</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>
            <tr data-ng-repeat="c in clients">
                <td>
                    <a href="#" data-ng-click="selectClient(c.cli_id)">Select</a> |
                    <a href="#" data-ng-click="deleteClient(c.cli_id)">Delete</a>
                </td>
                <td>{{c.cli_name}}</td>
                <td>{{c.cli_gender}}</td>
                <td>{{c.cli_email}}</td>
                <td>{{c.cli_phone}}</td>
            </tr>
        </table>
        <br />
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Details</h3>
            </div>
            <div class="panel-body">
                <form>
                    <input type="hidden" name="client.cli_id" data-ng-model="client.cli_id" value="{{client.cli_id}}" />
                    <div class="row">
                        <div class="form-group col-md-10">
                            <label for="name">Name</label>
                            <input type="text" name="client.cli_name" data-ng-model="client.cli_name"
                                   value="{{client.cli_name}}" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group col-md-2">
                            <label for="gender">Gender</label>
                            <input type="text" name="client.cli_gender" data-ng-model="client.cli_gender"
                                   value="{{client.cli_gender}}" class="form-control" placeholder="Gender">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label for="bdate">Date of birth</label>
                            <input type="date" name="client.cli_bdate" data-ng-model="client.cli_bdate"
                                   value="{{client.cli_bdate}}" class="form-control" placeholder="Date of birth">
                        </div>
                        <div class="form-group col-md-5">
                            <label for="email">Email</label>
                            <input type="text" name="client.cli_email" data-ng-model="client.cli_email"
                                   value="{{client.cli_email}}" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group col-md-5">
                            <label for="phone">Phone</label>
                            <input type="text" name="client.cli_phone" data-ng-model="client.cli_phone"
                                   value="{{client.cli_phone}}" class="form-control" placeholder="Phone">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="nickname">Nickname</label>
                            <input type="text" name="client.cli_nickname" data-ng-model="client.cli_nickname"
                                   value="{{client.cli_nickname}}" class="form-control" placeholder="Nickname">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="password">Password</label>
                            <input type="text" name="client.cli_password" data-ng-model="client.cli_password"
                                   value="{{client.cli_password}}" class="form-control" placeholder="Password">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary" data-ng-click="saveClient(client)">Save</button>
                            <button type="submit" class="btn btn-default" data-ng-click="updateClient(client)">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
